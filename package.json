{
  "name": "harry-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css,md}",
    "format:md": "prettier --write \"*.md\" \"**/*.md\"",
    "format:md:check": "prettier --check \"*.md\" \"**/*.md\"",
    "lint:md": "markdownlint-cli2 \"*.md\" \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"*.md\" \"**/*.md\"",
    "spell-check": "cspell \"src/**/*.{ts,tsx,css}\" \"*.md\"",
    "spell-check:fix": "cspell \"src/**/*.{ts,tsx,css}\" \"*.md\" --show-suggestions"
  },
  "devDependencies": {
    "@cspell/dict-en_us": "^4.4.24",
    "@cspell/dict-pt-br": "^2.4.2",
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/scrollreveal": "^0.0.11",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^10.1.0",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "globals": "^16.5.0",
    "markdownlint-cli2": "^0.19.1",
    "postcss": "^8.4.35",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "leva": "^0.10.1",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "scrollreveal": "^4.0.9",
    "three": "^0.181.2"
  }
}
